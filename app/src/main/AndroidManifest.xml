<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brijeshvishwanat.cafesling">
<uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewUserDb"
            android:label="@string/title_activity_new_user_db"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.brijeshvishwanat.cafesling.MainActivity" />
        </activity>
        <activity android:name=".AdminPage"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".ListViewDisplay"
            android:parentActivityName=".AdminPage"></activity>
        <activity android:name=".EmployeeChoice"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".EmployeeDetail"
            android:parentActivityName=".AdminPage"></activity>
        <activity android:name=".ReceiptsListView"
            android:parentActivityName=".AdminPage"></activity>
        <activity android:name=".Purchase"
            android:parentActivityName=".AdminPage"/>
        <activity android:name=".PurchaseListView"
            android:parentActivityName=".AdminPage"></activity>

    </application>

</manifest>